<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EgzaminCaesarMauiApp.MainPage">

    <ScrollView BackgroundColor="#5F9EA0">
        <Grid Padding="20" RowSpacing="12">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>

            <Label Grid.Row="0" Grid.Column="0" Text="Podaj wartość klucza" TextColor="#FAEBD7" />
            <Entry x:Name="KeyEntry" Grid.Row="1" Grid.Column="0" Keyboard="Numeric" />

            <Label Grid.Row="2" Grid.Column="0" Text="Podaj tekst" TextColor="#FAEBD7" />
            <Editor x:Name="PlainTextEditor"
                Grid.Row="3" Grid.Column="0"               
                HeightRequest="200"               
                TextColor="Black"
                BackgroundColor="White" />

            <Button x:Name="EncryptButton"
                Grid.Row="3" Grid.Column="1"
                Text="Zaszyfruj"
                VerticalOptions="Center"
                    BackgroundColor="#ADD8E6" 
                />
            <!--Clicked="EncryptButton_Clicked" do buttona wyzej zamiana na command-->

            <Frame Grid.Row="0" Grid.Column="1" Grid.RowSpan="3"
               Padding="10"
               BorderColor="#FAEBD7" CornerRadius="12"
               BackgroundColor="#5F9EA0">
                <StackLayout>
                    <Label Text="Tekst zaszyfrowany" TextColor="#FAEBD7" />
                    <ScrollView HeightRequest="240">
                        <Label x:Name="CipherTextLabel"
                           Text=""
                           TextColor="#F0F8FF"/>
                    </ScrollView>
                </StackLayout>
            </Frame>

            <Button x:Name="SaveButton" Grid.Row="4" Grid.Column="1" Text="Zapisz szyfr w pliku" BackgroundColor="#ADD8E6" />
            <!--Clicked="SaveButton_Clicked" zamienic na command wyzej  -->
        </Grid>
    </ScrollView>

</ContentPage>
