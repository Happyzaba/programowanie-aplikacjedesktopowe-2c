<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModel="clr-namespace:QuizMauiApp"
             x:Class="QuizMauiApp.MainPage">

    <ContentPage.BindingContext>
        <viewModel:ViewModel/>
    </ContentPage.BindingContext>
    <StackLayout>
        <VerticalStackLayout>
            <Label Text="Treść pytania"/>
            <Label Text="Kiedy byla bitwa pod Grunwaldem"></Label>

            <RadioButton Content="Wczoraj"/>
            <RadioButton Content="Za 15 minut"/>
            <RadioButton Content="1410"/>
            <RadioButton Content="Miedzy 4000 b.c a 2025"/>

            <HorizontalStackLayout>
                <Button Text="Poprzednie pytanie"
                        WidthRequest="300"/>
                <Button Text="Nastepne pytanie"
                         WidthRequest="300"/>
                <Button Text="Sprawdz"
                         WidthRequest="300"/>
                <Button Text="Od nowa"
                         WidthRequest="300"/>

            </HorizontalStackLayout>
            <Label Text="Wynik:"/>
        </VerticalStackLayout>
    </StackLayout>
</ContentPage>
